<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Style for Circle Image View -->
    <style name="CircleImageView" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="shapeAppearanceOverlay">@style/CircleShapeAppearance</item>
    </style>

    <!-- Define the shape appearance -->
    <style name="CircleShapeAppearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
